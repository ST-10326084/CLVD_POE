@model KhumaloCraft.Models.UserViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Settings</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Settings</h2>
                <form asp-controller="User" asp-action="Settings" method="get">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="email" value="@Model?.Email" readonly>
                    </div>

                    <div class="form-group">
                        <label for="role">Role</label>
                        <input type="text" class="form-control" id="role" value="@Model?.Role" readonly>
                    </div>                 
                </form>

                <form asp-controller="User" asp-action="ChangeRole" method="post">
                    <div class="form-group">
                        <label for="inputCode">Employee Passcode</label>
                        <input type="text" class="form-control" id="inputCode" name="Passcode" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
