@model List<KhumaloCraft.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Work</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="work">
        <h1>My Work</h1>
        <p>This is where the 'art' is stored.</p>

        <div class="work-items">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <div class="work-item">
                        <img src="@product.ImageUrl" alt="@product.ProductName" />
                        <div class="work-item-details">
                            <p class="price">
                                Price: R @product.Price
                            </p>
                            <p class="description">@product.Description</p>
                            <p class="category">Category: @product.Category</p>
                            <p class="availability">Availability: @product.Stock</p>
                            <form method="post" action="/Home/AddToCart">
                                <input type="hidden" name="productId" value="@product.ProductID" />
                                <label for="quantity">Quantity:</label>
                                <input type="number" name="quantity" id="quantity" min="1" max="@product.Stock" required />
                                <button type="submit">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No products found.</p>
            }
        </div>       
        
            <a href="/Home/ViewCart">View Cart</a>

            <a href="/Home/ManageStock">Stock</a>
            
    </div>
</body>
</html>
