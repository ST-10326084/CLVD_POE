@model List<KhumaloCraft.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Work</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="work">
        <h1>My Work</h1>
        <p>This is where the 'art' is stored.</p>

        <@if (Model == null || !Model.Any())
        {
                <p>No products found.</p> <!-- Handle empty or null cases -->
        }
        else
        {
                <div class="work-items">
                @foreach (var product in Model)
                {
                    if (product == null) // Skip any null entries
                    {
                        continue;
                    }

                            <div class="work-item">
                                <img src="@product.ImageUrl" alt="@product.ProductName" />
                                <div class="work-item-details">
                                    <p class="price">
                                        Price: R@product.Price
                                    </p>
                                    <p class="description">@product.Description</p>
                                </div>
                            </div>
                }
                </div>
        }
    </div>
</body>
</html>