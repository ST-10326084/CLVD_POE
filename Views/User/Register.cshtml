@model KhumaloCraft.Models.User

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script>
        function togglePasscodeField() {
            var role = document.querySelector('input[name="Role"]:checked').value;
            var passcodeField = document.getElementById('passcodeField');
            passcodeField.style.display = (role === 'Employee') ? 'block' : 'none';
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Register</h2>
                <form asp-controller="User" asp-action="RegisterUser" method="post">
                    <div class="form-group">
                        <label for="inputRegisterEmail">Email address</label>
                        <input type="email" class="form-control" id="inputRegisterEmail" name="UserEmail" required>
                    </div>
                    <div class="form-group">
                        <label for="inputRegisterPassword">Password</label>
                        <input type="password" class="form-control" id="inputRegisterPassword" name="PasswordHash" required>
                    </div>
                    <div class="form-group">
                        <label>Account Type</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Role" id="roleUser" value="User" checked onchange="togglePasscodeField()">
                            <label class="form-check-label" for="roleUser">User</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Role" id="roleEmployee" value="Employee" onchange="togglePasscodeField()">
                            <label class="form-check-label" for="roleEmployee">Employee</label>
                        </div>
                    </div>
                    <div class="form-group" id="passcodeField" style="display:none;">
                        <label for="inputPasscode">Employee Passcode</label>
                        <input type="password" class="form-control" id="inputPasscode" name="EmployeePasscode">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                    <p class="text-center">Already have an account? <a asp-controller="User" asp-action="Login">Login here</a>.</p>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
